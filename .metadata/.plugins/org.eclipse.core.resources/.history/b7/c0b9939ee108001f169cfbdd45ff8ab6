package ncs.test5;

public class Book {
//필드 전역변수
	private String title; 	     //멤버변수
	private String author;	     //멤버변수
	private int price;		    //멤버변수
	private String publisher;   //멤버변수
	private double discountRet;//멤버변수
	
//메서드
	//기본생성자 ctrl space
	public Book() {
	}
	
	//필수생성자 ctrl s o
	public Book(String title, String author, int price, String publisher, double discountRet) {
		super();
		this.title = title;
		this.author = author;
		this.price = price;
		this.publisher = publisher;
		this.discountRet = discountRet;
	}

	//Getter
	public String getTitle() {
		return title;
	}
	public String getAuthor() {
		return author;
	}
	public int getPrice() {
		return price;
	}
	public String getPublisher() {
		return publisher;
	}
	public double getDiscountRet() {
		return discountRet;
	}
	//Setter
	public void setTitle(String title) {
		this.title = title;
	}

	public void setAuthor(String author) {
		this.author = author;
	}


	public void setPrice(int price) {
		this.price = price;
	}


	public void setPublisher(String publisher) {
		this.publisher = publisher;
	}


	public void setDiscountRet(double discountRet) {
		this.discountRet = discountRet;
	}

	//toString String
	@Override
	public String toString() {
		return "Book [title=" + title + ", author=" + author + ", price=" + price + ", publisher=" + publisher
				+ ", discountRet=" + discountRet + "]";
	}




}
